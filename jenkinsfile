pipeline{
    agent any

     

    stages{
         stage('Clean'){
                steps{
                    echo('Cleaning...')
                  sh  './gradlew clean'

                }
            }

          stage('Build'){
                steps{
                    echo('Building...')
                    sh './gradlew assembleDebug'
                }
            }

             stage('Test'){
                    steps{
                        echo('Testing...')
                        sh './gradlew testDebugUnitTest'
                    }
                }
                
                stage('Save'){
                    steps{
                        archiveArtifacts 'app/build/outputs/apk/*'
                    }
                }
         }
}
