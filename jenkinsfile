pipeline{
    agent any

     

    stages{
         stage('Clean'){
                steps{
                    echo('Cleaning...')
                  sh  './gradlew clean'

                }
            }

          stage('Build'){
                steps{
                    echo('Building...')
                    sh './gradlew assembleDebug'
                      archiveArtifacts '**/build/outputs/apk/*'
                }
            }

             stage('Test'){
                    steps{
                        echo('Testing...')
                        sh './gradlew testDebugUnitTest'
                        junit '**/test-results/**/*.xml'
                    }
                }
                
              
         }
}
